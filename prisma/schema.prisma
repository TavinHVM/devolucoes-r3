generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_profiles {
  id Int @id @default(autoincrement())
  first_name                String
  last_name                 String
  password                  String
  role                      String
  user_level                String
  email                     String
  created_at                DateTime  @default(now())
  updated_at                DateTime  @default(now())
}

model solicitacoes {
  id Int @id @default(autoincrement())
  nome                      String
  filial                    String
  numero_nf                 String
  carga                     String
  nome_cobranca             String?
  cod_cobranca              String
  rca                       Int
  cgent                     String?
  motivo_devolucao          String
  motivo_recusa             String?
  tipo_devolucao            String
  arquivo_url               Bytes?
  cod_cliente               Int
  status                    String
  vale                      String
  pendente_at               DateTime?
  aprovada_at               DateTime?
  recusada_at               DateTime?
  desdobrada_at             DateTime?
  reenviada_at              DateTime?
  abatida_at                DateTime?
  finalizada_at             DateTime?
  created_at                DateTime  @default(now())
  updated_at                DateTime?  @default(now())
}

model products {
  id                        Int @id @default(autoincrement())
  numeronf                  String
  cod_prod                  String
  descricao                 String
  quantidade                String
  created_at                DateTime  @default(now())
}

model returned_products {
  id                        Int @id @default(autoincrement())
  numeronf                  String
  cod_prod                  String
  descricao                 String
  quantidade                String
  created_at                DateTime  @default(now())
}



